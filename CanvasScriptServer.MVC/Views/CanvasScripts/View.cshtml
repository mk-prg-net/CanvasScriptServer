@model CanvasScriptServer.ICanvasScript

@{
    Layout = null;
    var CreatedAsTimeString = Model.Created.ToShortTimeString();
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">

        <form>
            <h1>CanvasScript @Model.AuthorName:@Model.Name</h1>
            <dl class="dl-horizontal">
                <dt>Erstellt am</dt>
                <dd>@Model.Created.ToString()</dd>
                <dt>letzte Änderung</dt>
                <dd>@Model.Modified.ToString()</dd>
                <dt>Erstellungszeit</dt>
                <dd>@CreatedAsTimeString</dd>
            </dl>

            @* Name des Benutzers sichern *@
            <input type="hidden" id="UserName" value="@Model.AuthorName" />

            @* Namen des Scriptes sichern *@
            <input type="hidden" id="ScriptName" value="@Model.Name" />

            <div class="row">

                <div class="col-xs-12 col-md-9 col-lg-9">
                    <canvas id="pane" class="" width="800" height="600"></canvas>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-md-3 col-lg-3">
                    <h3>Scripte</h3>
                    <table id="Scripts" class="table table-striped"></table>
                </div>
            </div>

  

        </form>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/require.js" data-main="/Scripts/mk-prg-net/CanvasPainter/Edit/DocumentReady.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
